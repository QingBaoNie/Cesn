{
  "bad_words": {
    "description": "敏感词关键词列表（模糊匹配）",
    "type": "list",
    "items": {
      "type": "string"
    },
    "hint": "填写需要撤回的关键词，如 '操你妈'、'傻逼'"
  },
  "spam_config": {
    "description": "刷屏检测配置",
    "type": "object",
    "items": {
      "spam_count": {
        "description": "检测在X秒发送X条信息(默认3条)",
        "type": "int",
        "default": 3
      },
      "spam_interval": {
        "description": "检测在X秒内(默认1秒)",
        "type": "int",
        "default": 1
      },
      "spam_ban_duration": {
        "description": "刷屏禁言时长（秒）",
        "type": "int",
        "default": 60
      }
    }
  },
  "admin_config": {
    "description": "群管功能配置",
    "type": "object",
    "items": {
      "owner_qq": {
        "description": "主人QQ号（最高权限账号）",
        "type": "string",
        "default": ""
      },
      "sub_admin_list": {
        "description": "子管理列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "填写子管理QQ号列表（如：123456789）",
        "default": []
      },
      "kick_black_list": {
        "description": "踢黑名单列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "被列入黑名单的用户将被自动踢出群聊",
        "default": []
      },
      "target_user_list": {
        "description": "针对用户列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "对特定用户执行定向操作，如静默撤回发言",
        "default": []
      },
      "whitelist": {
        "description": "白名单列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "白名单用户将跳过违禁词/广告/卡片/号码/转发/针对撤回，但仍会触发刷屏检测",
        "default": []
      },
      "recall_links": {
        "description": "是否开启链接撤回",
        "type": "bool",
        "default": false
      },
      "recall_cards": {
        "description": "是否开启卡片消息撤回",
        "type": "bool",
        "default": false
      },
      "recall_numbers": {
        "description": "是否开启号码撤回",
        "type": "bool",
        "default": false
      },
      "recall_forward": {
        "description": "是否开启转发消息撤回（合并转发/多条组合消息）",
        "type": "bool",
        "default": false
      },
      "recall_long_text": {
        "description": "是否开启超长文本撤回",
        "type": "bool",
        "default": true
      },
      "max_text_length": {
        "description": "单条消息可见文字最大长度阈值，超出则撤回",
        "type": "int",
        "default": 100
      },
      "auto_accept_owner_invite": {
        "description": "是否自动同意主人邀请入群",
        "type": "bool",
        "default": true
      },
      "reject_non_owner_invite": {
        "description": "是否拒绝非主人邀请入群并私聊提示“不要拉我”",
        "type": "bool",
        "default": true
      }
    }
  },
  "auto_replies": {
    "description": "自动关键词回复（格式：关键词-回复内容，支持 {face:ID} 表情变量）",
    "type": "list",
    "items": {
      "type": "string"
    },
    "hint": "每条用 - 分隔关键词和回复内容，例如：'6-你在6什么? {face:66}'，'早-早上好阿{face:14}'",
    "default": []
  }
}

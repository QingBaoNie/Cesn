{
  "bad_words": {
    "description": "敏感词关键词列表（模糊匹配）",
    "type": "list",
    "items": {
      "type": "string"
    },
    "hint": "填写需要撤回的关键词，如 '操你妈'、'傻逼'"
  },
  "spam_config": {
    "description": "刷屏检测配置",
    "type": "object",
    "items": {
      "spam_count": {
        "description": "检测在X秒发送X条信息(3条)",
        "type": "int",
        "default": 3
      },
      "spam_interval": {
        "description": "检测在X秒(1秒)",
        "type": "int",
        "default": 1
      },
      "spam_ban_duration": {
        "description": "刷屏禁言时长（秒）",
        "type": "int",
        "default": 60
      }
    }
  },
  "group_manage_config": {
    "description": "群管功能配置",
    "type": "object",
    "items": {
      "sub_admin_list": {
        "description": "子管理列表",
        "type": "list",
        "items": {
          "type": "int"
        },
        "hint": "填写子管理员的QQ号（纯数字），具有部分管理权限",
        "default": []
      },
      "kick_blacklist": {
        "description": "踢黑列表",
        "type": "list",
        "items": {
          "type": "int"
        },
        "hint": "在此列表中的QQ号进入群后将会被自动踢出",
        "default": []
      }
    }
  }
}

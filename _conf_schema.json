{
  "bad_words": {
    "description": "敏感词关键词列表（模糊匹配）",
    "type": "list",
    "items": {
      "type": "string"
    },
    "hint": "填写需要撤回的关键词，如 '操你妈'、'傻逼'"
  },
  "spam_config": {
    "description": "刷屏检测配置",
    "type": "object",
    "items": {
      "spam_count": {
        "description": "检测在X秒发送X条信息(3条)",
        "type": "int",
        "default": 3
      },
      "spam_interval": {
        "description": "检测在X秒(1秒)",
        "type": "int",
        "default": 1
      },
      "spam_ban_duration": {
        "description": "刷屏禁言时长（秒）",
        "type": "int",
        "default": 60
      }
    }
  },
  "admin_config": {
    "description": "群管功能配置",
    "type": "object",
    "items": {
      "sub_admin_list": {
        "description": "子管理列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "填写子管理QQ号列表（如：123456789）",
        "default": []
      },
      "kick_black_list": {
        "description": "踢黑名单列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "被列入黑名单的用户将被自动踢出群聊",
        "default": []
      },
      "target_user_list": {
        "description": "针对用户列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "对特定用户执行定向操作，如静默撤回发言",
        "default": []
      },
      "recall_links": {
        "description": "是否开启链接撤回",
        "type": "bool",
        "default": false
      },
      "recall_cards": {
        "description": "是否开启卡片消息撤回",
        "type": "bool",
        "default": false
      },
      "recall_numbers": {
        "description": "是否开启号码撤回（如手机号）",
        "type": "bool",
        "default": false
      }
    }
  }
}

{
  "bad_words": {
    "description": "敏感词关键词列表（模糊匹配）",
    "type": "list",
    "items": {
      "type": "string"
    },
    "hint": "填写需要撤回的关键词，如 '操你妈'、'傻逼'"
  },
  "spam_config": {
    "description": "刷屏检测配置",
    "type": "object",
    "items": {
      "spam_count": {
        "description": "检测在X秒发送X条信息(3条)",
        "type": "int",
        "default": 3
      },
      "spam_interval": {
        "description": "检测在X秒(1秒)",
        "type": "int",
        "default": 1
      },
      "spam_ban_duration": {
        "description": "刷屏禁言时长（秒）",
        "type": "int",
        "default": 60
      }
    }
  },
  "admin_config": {
    "description": "群管功能配置",
    "type": "object",
    "items": {
      "sub_admin_list": {
        "description": "子管理列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "填写子管理QQ号列表（如：123456789）",
        "default": []
      },
      "kick_black_list": {
        "description": "踢黑名单列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "被列入黑名单的用户将被自动踢出群聊",
        "default": []
      },
      "target_user_list": {
        "description": "针对用户列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "对特定用户执行定向操作，如静默撤回发言",
        "default": []
      },
      "whitelist": {
        "description": "白名单列表",
        "type": "list",
        "items": {
          "type": "string"
        },
        "hint": "白名单用户将跳过违禁词/广告/卡片/号码/针对撤回，但仍会触发刷屏检测",
        "default": []
      },
      "recall_links": {
        "description": "是否开启链接撤回",
        "type": "bool",
        "default": false
      },
      "recall_cards": {
        "description": "是否开启卡片消息撤回",
        "type": "bool",
        "default": false
      },
      "recall_numbers": {
        "description": "是否开启号码撤回（失效）",
        "type": "bool",
        "default": false
      },
      "welcome": {
        "description": "新人入群欢迎配置（仅以下群号生效）",
        "type": "object",
        "items": {
          "enabled": {
            "description": "开启新人入群欢迎",
            "type": "bool",
            "default": false
          },
          "groups": {
            "description": "启用欢迎的群号白名单（留空表示不在任何群启用）",
            "type": "list",
            "items": { "type": "string" },
            "hint": "填写需要启用欢迎的群号，如：['123456789','987654321']",
            "default": []
          },
          "template": {
            "description": "欢迎模板（支持变量）",
            "type": "string",
            "default": "欢迎 {name} 加入 {group} ~"
          },
          "auto_delete_seconds": {
            "description": "欢迎消息自动撤回秒数（0 不撤回）",
            "type": "int",
            "default": 0
          }
        },
        "hint": "可用变量：{name}（新人名片/昵称/QQ）、{qq}（新人QQ）、{group}（群名称）、{group_id}（群号）、{time}（当前时间）"
      }
    }
  }
}
